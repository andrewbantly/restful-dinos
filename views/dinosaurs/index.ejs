<%- include("../partials/header.ejs") %>
<h1>Dino Search Form:</h1>

<!-- /dinosaurs?dinoFilter=whatever-the-user-typed -->

<form method="GET" action="/dinosaurs">
    <label for="dinoSearch">Search:</label>
    <input type="text" placeholder="search dino names" name="dinoName"/>
    <button type="submit">Search</button>
</form>

<ul>
    <% dinos.forEach((dino, i)=> { %>
      <li>
        <%= dino.name %> is a <%= dino.type %>
        <a href="/dinosaurs/<%=i%>">more info</a>
    </li>  
   <% }); %>
</ul>
